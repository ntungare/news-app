{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "esnext",
        "jsx": "react",
        "sourceMap": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./dist", "node_modules"]
}
