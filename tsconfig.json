{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "esnext",
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}
